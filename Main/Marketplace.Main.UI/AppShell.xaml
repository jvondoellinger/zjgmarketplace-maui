<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Marketplace.Main.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Marketplace.Main.UI"
    xmlns:products="clr-namespace:Marketplace.Products.UI.Views;assembly=Marketplace.Products.UI"
    xmlns:user="clr-namespace:Marketplace.Users.UI.Views;assembly=Marketplace.Users.UI"
    xmlns:orders="clr-namespace:Marketplace.Orders.UI.Views;assembly=Marketplace.Orders.UI"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Produtos"
            Icon="fallback.png"
            ContentTemplate="{DataTemplate products:ProductCardsPage}"
            Route="ProductsPage" />
        <ShellContent
            Title="Categorias"
            Icon="fallback.png"
            ContentTemplate="{DataTemplate products:ProductCategoriesPage}"
            Route="ProductsCategoriesPage" />
        <ShellContent
            Title="Perfil"
            Icon="fallback.png"
            ContentTemplate="{DataTemplate user:UserLoginPage}"
            Route="UserLoginPage" />
        <ShellContent
            Title="Carrinho"
            Icon="fallback.png"
            ContentTemplate="{DataTemplate products:ProductCartPage}"
            Route="ProductCartPage" />
        <ShellContent
            Title="Dashboard"
            Icon="fallback.png"
            ContentTemplate="{DataTemplate user:AccountDashboardPage}"
            Route="AccountDashboardPage" />
        <ShellContent
            Title="Checkout"
            Icon="fallback.png"
            ContentTemplate="{DataTemplate orders:CheckoutPage}"
            Route="CheckoutPage" />
    </TabBar>

</Shell>
