<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marketplace.Products.UI.Views.PreviewProductsPage"
			 xmlns:product="clr-namespace:Marketplace.Products.UI.Views.Content">
	<Grid
        BackgroundColor="Transparent"
        Padding="20"
        RowDefinitions="*,Auto">
		<CollectionView
            BackgroundColor="Transparent"
            ItemsSource="{Binding ProductViewModels}"
            SelectedItem="{Binding SelectedProductViewModel, Mode=OneWayToSource}"
            SelectionMode="Single"
            RemainingItemsThreshold="1"
            ItemSizingStrategy="MeasureAllItems"
            Grid.Row="0">
			<CollectionView.ItemsLayout>
				<GridItemsLayout Orientation="Vertical"
                                 Span="2"
                                 VerticalItemSpacing="15"
                                 HorizontalItemSpacing="15"/>
			</CollectionView.ItemsLayout>
			<CollectionView.ItemTemplate>
				<DataTemplate>
                    <product:ProductCard
                        InputTransparent="True"
                        BackgroundColor="#F2F2F2"
                        PreviewProductViewModel="{Binding .}"/>
                </DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</Grid>
</ContentPage>