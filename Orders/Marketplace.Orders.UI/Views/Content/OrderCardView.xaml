<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marketplace.Orders.UI.Views.Content.OrderCardView">
    <Border 
        Stroke="Black"
        StrokeShape="RoundRectangle 8">
        <Grid
            Padding="15"
            RowSpacing="5"
            ColumnDefinitions="*,*,*"
            RowDefinitions="Auto,Auto">
            <Label 
                Text="{Binding Id, StringFormat='NÂº {0}'}"
                FontSize="Micro"
                FontAttributes="Bold"
                TextDecorations="Underline"
                Grid.Column="0"
                Grid.Row="0"/>
            <Label
                Text="{Binding Price, StringFormat='{0:C}'}"
                FontSize="Default"
                FontAttributes="Bold"
                TextColor="Black"
                HorizontalTextAlignment="End"
                Grid.Column="2"
                Grid.Row="0"/>
            <Label 
                Text="{Binding Status, StringFormat='Status: {0}'}"
                FontSize="Micro"
                FontAttributes="Bold"
                TextColor="Orange"
                Grid.Column="0"
                Grid.Row="1"/>
            <Label 
                Text="{Binding CreatedAt, StringFormat='{0:dd/MM/yyyy}'}"
                FontSize="Micro"
                FontAttributes="Bold"
                TextColor="Black"
                HorizontalTextAlignment="Center"
                Grid.Column="1"
                Grid.Row="0"/>
        </Grid>
    </Border>
        
</ContentView>
