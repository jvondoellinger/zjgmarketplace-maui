<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Marketplace.Main.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Marketplace.Main.UI"
    xmlns:products="clr-namespace:Marketplace.Products.UI.Views;assembly=Marketplace.Products.UI"
    xmlns:user="clr-namespace:Marketplace.Users.UI.Views;assembly=Marketplace.Users.UI"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Produtos"
            Icon="fallback.png"
            ContentTemplate="{DataTemplate products:PreviewProductsPage}"
            Route="ProductsPage" />
        <ShellContent
            Title="Categorias"
            Icon="fallback.png"
            ContentTemplate="{DataTemplate products:ProductCategoriesPage}"
            Route="ProductsCategoriesPage" />
        <ShellContent
            Title="Perfil"
            Icon="fallback.png"
            ContentTemplate="{DataTemplate user:UserLoginPage}"
            Route="UserLoginPage" />
    </TabBar>

</Shell>
