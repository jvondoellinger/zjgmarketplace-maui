<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="zjgmarketplace.modules.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:zjgmarketplace.Modules.UI.User.View"
    xmlns:order="clr-namespace:zjgmarketplace.Modules.UI.Order.View"
    xmlns:product="clr-namespace:zjgmarketplace.Modules.UI.Product.View"
    xmlns:controls="clr-namespace:zjgmarketplace.Modules.UI.Controls.Views.Content"
    Shell.FlyoutBehavior="Disabled"
    Title="zjgmarketplace.modules.UI">

    <ShellContent
        ContentTemplate="{DataTemplate product:ProductsPage}"
        Route="MainPage" />

    <ShellContent
        ContentTemplate="{DataTemplate product:ProductsPage}"
        Route="MainPages" />
    <ShellContent
        ContentTemplate="{DataTemplate order:OrdersPreviewPage}"
        Route="OrdersPage" />
    <ShellContent
        Route="SignupPage"
        ContentTemplate="{DataTemplate local:SignupPage}"/>
    <ShellContent
        Route="LoginPage"
        ContentTemplate="{DataTemplate local:LoginPage}"/>
    <ShellContent
        Route="ProfileSection"
        ContentTemplate="{DataTemplate local:ProfilePage}"/>
    <ShellContent
        Route="ProductsPage"
        ContentTemplate="{DataTemplate product:ProductsPage}"/>

</Shell>
