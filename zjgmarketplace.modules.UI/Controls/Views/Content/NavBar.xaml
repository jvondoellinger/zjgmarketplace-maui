<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zjgmarketplace.Modules.UI.Controls.Views.Content.NavBar">
    <Grid 
        RowDefinitions="Auto,Auto,Auto"
        ColumnDefinitions="*,*,*"
        Padding="5">
        <Frame 
            Grid.Column="0"
            Grid.Row="0">
            <Label 
                Text="Main"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>
        </Frame>
        <Frame Grid.Column="1"
               Grid.Row="0">
            <Label 
                Text="Cart"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>
        </Frame>
        <Frame Grid.Column="2"
               Grid.Row="0">
            <Label 
                Text="Account"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>
        </Frame>
    </Grid>
</ContentView>
