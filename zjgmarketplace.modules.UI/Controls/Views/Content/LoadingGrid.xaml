<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zjgmarketplace.Modules.UI.Controls.Views.Content.LoadingGrid">
    <Grid
        x:Name="LoadingGridIndicator"
        Padding="10"
        IsVisible="False"
        Opacity="0.6"
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label 
            Text="Carregando..."
            Grid.Row="0"/>
        <ActivityIndicator
            x:Name="LoadingIndicator"
            IsRunning="False"
            Color="Blue"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Grid.Row="1"/>
    </Grid>
</ContentView>
