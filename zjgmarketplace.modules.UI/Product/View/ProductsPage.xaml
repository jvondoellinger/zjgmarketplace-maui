<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zjgmarketplace.Modules.UI.Product.View.ProductsPage">
    <Grid
        Padding="20">
        <CollectionView 
            ItemsSource="{Binding ProductViewModels}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" 
                                 Span="2"
                                 VerticalItemSpacing="15"
                                 HorizontalItemSpacing="15"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame>
                        <VerticalStackLayout>
                            <Image 
                                Source="{Binding ImageURL}"
                                Aspect="AspectFill" 
                                HeightRequest="150"
                                WidthRequest="150"/> <!-- Image -->
                                <Label 
                                    Text="{Binding Title}" 
                                    HorizontalOptions="Center"/> <!-- Title -->
                                <Label 
                                    Text="{Binding Price, StringFormat='PreÃ§o: {0:C}'}"
                                    FontAttributes="Bold"
                                    HorizontalOptions="Center"/> <!-- Price -->
                                <Button
                                    Text="Buy"/> <!-- Add cart -->                            
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>