    <Frame>
        <VerticalStackLayout>
            <Image 
                Source="{Binding ImageURL}"
                Aspect="AspectFill" 
                HeightRequest="150"
                WidthRequest="150"/>
            <Label 
                Text="{Binding Title}" 
                HorizontalOptions="Center"/>
            <!-- Title -->
            <Label 
                Text="{Binding Price, StringFormat='PreÃ§o: {0:C}'}"
                FontAttributes="Bold"
                HorizontalOptions="Center"/>
            <!-- Price -->
            <Button
                Text="Buy"
                Clicked="ButtonRedirectToOrderPage_Clicked"/>
            <!-- Add cart -->
        </VerticalStackLayout>
    </Frame>
</ContentView>