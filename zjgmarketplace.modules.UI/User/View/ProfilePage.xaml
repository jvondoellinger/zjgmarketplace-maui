<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zjgmarketplace.Modules.UI.User.View.ProfilePage"
             Title="Profile">

    <CollectionView 
        Margin="10"
        ItemsSource="{Binding ProfileSectionViewModel}"
        SelectedItem="{Binding SelectedProfileSectionViewModel, Mode=TwoWay}"
        SelectionMode="Single"
        SelectionChanged="CollectionView_SelectionChanged"
        BackgroundColor="AliceBlue">
        <CollectionView.ItemsLayout>
            <GridItemsLayout 
                VerticalItemSpacing="5"
                Orientation="Vertical"
                Span="1"/>
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame
                    CornerRadius="2"
                    BackgroundColor="#F5F5F5"
                    Padding="15"
                    InputTransparent="False"
                    HorizontalOptions="Fill">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding RedirectCommand}"/>
                    </Frame.GestureRecognizers>
                    <Label 
                        Text="{Binding Name}"
                        HorizontalOptions="Fill"/>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>