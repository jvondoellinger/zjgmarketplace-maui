<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:zjgmarketplace.Modules.UI.Controls.Views.Content"
             x:Class="zjgmarketplace.Modules.UI.User.View.LoginPage">
    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="20">
        <Label 
            Text="Login in your account"
            HorizontalOptions="Center"
            Grid.Row="0"/>

        <Entry
            Placeholder="Email: (ex: example@domain.com)"
            MinimumWidthRequest="250"
            Text="{Binding LoginModel.Email, Mode=TwoWay}"/>

        <Entry
            Placeholder="Password: "
            MinimumWidthRequest="250"
            IsPassword="True"
            Text="{Binding LoginModel.Password, Mode=TwoWay}"/>

        <Button
            Text="Login"
            MinimumWidthRequest="250"
            Padding="10"
            Clicked="LoginButton_Clicked"/> <!-- Adiocionar evento para subir pop-up e alterar cor do botão -->

        <Label VerticalOptions="End"
               HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding SignupRedirect}"/>
            </Label.GestureRecognizers>
            
            <Label.FormattedText>
                <FormattedString>
                    <Span 
                        Text="Não possui uma conta? "/>
                    <Span 
                        Text="Crie aqui."
                        TextColor="Purple"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <controls:LoadingGrid 
            x:Name="LoadingControl"/>
    </VerticalStackLayout>
</ContentPage>